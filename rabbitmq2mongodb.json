{
   "system":{
      "metrics":true,
      "metrics_interval":1,
      "metrics_dst":"table"
   },
   "bootstrap":{
      "logs_broker":{
         "module":"wishbone.iomodules.broker",
         "class":"Broker",
         "variables":{
            "host":"localhost",
            "vhost":"/",
            "username":"guest",
            "password":"guest",
            "consume_queue":"syslog",
            "prefetch_count":200,
            "no_ack":true,
            "delivery_mode":2
         }
      },
      "logs_validate":{
         "module":"wishbone.modules.jsonvalidator",
         "class":"JSONValidator",
         "variables":{
            "schema":false,
            "convert":true
         }
      },
      "logs_mongodb":{
        "module":"wishbone.iomodules.mongodb",
        "class":"MongoDB",
        "variables":{
          "host":"localhost",
          "db":"mongotails",
          "collection":"input",
          "capped":true,
          "max":1000000,
          "size":1000000,
          "drop_db":false,
          "dateconversions":["@timestamp"]
        }
      }
   },
   "routingtable":{
      "logs_broker.inbox":[
        "logs_validate.inbox"
      ],
      "logs_validate.outbox":[
        "logs_mongodb.outbox"
      ]
   }
}
