{
   "system":{
      "metrics":false,
      "metrics_interval":10,
      "metrics_dst":"logging"
   },
   "bootstrap":{
      "broker":{
         "module":"wishbone.iomodules.broker",
         "class":"Broker",
         "variables":{
            "host":"localhost",
            "vhost":"/",
            "username":"guest",
            "password":"guest",
            "consume_queue":"syslog",
            "prefetch_count":200,
            "no_ack":true,
            "delivery_mode":2
         }
      },
      "validate":{
         "module":"wishbone.modules.jsonvalidator",
         "class":"JSONValidator",
         "variables":{
            "schema":false,
            "convert":true
         }
      },
      "mongodb":{
        "module":"wishbone.iomodules.mongodb",
        "class":"MongoDB",
        "variables":{
          "host":"localhost",
          "db":"mongotails",
          "collection":"input",
          "capped":true,
          "max":1000000,
          "size":1000000,
          "drop_db":true,
          "dateconversions":["@timestamp"]
        }
      }
   },
   "routingtable":{
      "broker.inbox":[
        "validate.inbox"
      ],
      "validate.outbox":[
        "mongodb.outbox"
      ]
   }
}
